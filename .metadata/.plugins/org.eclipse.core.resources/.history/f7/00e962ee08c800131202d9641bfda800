package root;

public class FluidField {
	
	private int _size;
	private int _area;

	private double[] _u;
	private double[] _uo;
	private double[] _v;
	private double[] _vo;
	
	//// CONSTRUCTOR ----------------------------------------------------------
	
	public FluidField(int size){
		_size = size;
		_area = _size * _size;
		
		// Initialize Velocities
		_u = new double[_size*2];
		_v = new double[_size*2];
		
		for(int i = 0; i < _size; i++){
			// Coordinates
			double x = i % _size - 128;
			double y = Math.floor(i/_size) - 128;
			double r = Math.sqrt(x*x + y*y);
			double u_x = x / r;
			double u_y = y / r;
			
			
			_u[i] = -u_y * 200 / Math.log(r);
			_v[i] =  u_x * 200 / Math.log(r);//200 * (Math.random() - 0.5);
			
			if(x > 50 && x < 100 && y > 25 && y < 100){
				this.density[i] = 1;
			}
		}
		
	}
	
	//// PRIMARY UPDATE -------------------------------------------------------
	
	
	
	//// ADVECTION ------------------------------------------------------------
	
	public double[] advect(double[] updated, double[] quantity, double dt, double[] u, double[] v){
		
		return newQuantity;
	}
	
